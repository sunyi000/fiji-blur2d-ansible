<tool>
  <description>Fiji blur2d plugin</description>

  <command><![CDATA[   
      mkdir working_dir &&
      mkdir output &&

      ln -s $inputImageFile working_dir/$inputImageFile.element_identifier &&
  

    /opt/Fiji.app/ImageJ-linux64 --ij2 --headless --run "Blur2d" "inputImageFile='working_dir/$inputImageFile.element_identifier',radius='$radius'"	 &&
    
    mv working_dir/blur2d.tif output


  ]]></command>
  <inputs>
	  <param name="inputImageFile" type="data" format="tif,tiff" label="inputImageFile"/>
    <param name="radius" type="text" label="radius"/>          
  </inputs>
  <outputs>
   <data name="tiff" format="tiff">
      <discover_datasets pattern="__designation_and_ext__" directory="output" visible="true" />
    </data>
    <data name="txt" format="txt">
      <discover_datasets pattern="__designation_and_ext__" directory="output" visible="true" />
    </data>
  </outputs>

  <stdio>
  	<exit_code range="1:" level="fatal" description="Error occured"/>
  </stdio>

  <tests>

  </tests>
  <help>
    aaa
  </help>
</tool>